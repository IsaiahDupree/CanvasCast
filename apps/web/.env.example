# ===========================================
# CanvasCast Web App Environment Variables
# ===========================================

# Supabase (from `supabase status` or production dashboard)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54341
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Resend (email notifications)
RESEND_API_KEY=re_your-resend-key
RESEND_FROM="CanvasCast <hello@canvascast.com>"

# OpenAI (for client-side features if needed)
OPENAI_API_KEY=sk-your-openai-key

# App Configuration
PORT=3838
APP_BASE_URL=http://localhost:3838
INTERNAL_NOTIFY_SECRET=your-internal-secret

# Stripe (from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_PACK_25=price_xxxxx
STRIPE_PRICE_PACK_80=price_xxxxx
STRIPE_PRICE_PACK_250=price_xxxxx
STRIPE_PRICE_PACK_500=price_xxxxx
STRIPE_PRICE_STARTER=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_CREATOR_PLUS=price_xxxxx

# PostHog Analytics (from https://app.posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_POSTHOG_SESSION_RECORDING=false

# Meta Pixel (Facebook Pixel) for ad tracking (from https://business.facebook.com/events_manager)
NEXT_PUBLIC_META_PIXEL_ID=your-meta-pixel-id
