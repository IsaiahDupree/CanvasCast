{
  "name": "canvascast",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @canvascast/web dev",
    "dev:api": "pnpm --filter @canvascast/api dev",
    "dev:worker": "pnpm --filter @canvascast/worker dev",
    "dev:remotion": "pnpm --filter @canvascast/remotion dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\" \"pnpm dev:worker\"",
    "build": "pnpm --filter @canvascast/web build",
    "build:api": "pnpm --filter @canvascast/api build",
    "build:remotion": "pnpm --filter @canvascast/remotion build",
    "lint": "pnpm --filter @canvascast/web lint",
    "test": "vitest run --exclude tests/db",
    "test:watch": "vitest --exclude tests/db",
    "test:coverage": "vitest run --coverage --exclude tests/db",
    "test:unit": "vitest run tests/unit",
    "test:db": "vitest run tests/db",
    "test:worker": "vitest run tests/worker",
    "test:security": "vitest run tests/security",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:ci": "vitest run --exclude tests/db",
    "test:integration": "vitest run tests/integration",
    "test:integration:full": "vitest run tests/integration --timeout=600000",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "db:studio": "open http://127.0.0.1:54343"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@react-email/components": "^1.0.4",
    "@react-email/render": "^2.0.2",
    "@supabase/supabase-js": "^2.45.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "react": "18.3.1",
    "react-dom": "^18.3.1",
    "supertest": "^7.2.2",
    "toml": "^3.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1"
  }
}
